
hnOrange = #ff6600

body
  background            #eee
  font-family           "Helvetica Neue"
  font-size             16px
  letter-spacing        .04em
  -webkit-user-select   none
  overflow              hidden

.kdloader
  position              absolute
  left                  50%
  top                   50%
  -webkit-transform     translateY(-50%) translateX(-50%)

main.main-view
  .inner-container
    margin                0 auto
    max-width             960px
    padding               0 30px
    box-sizing            border-box
    position              relative

  .no-article-view
    padding               30px
    text-align            center
    border                1px solid #fff
    border-radius         4px
    color                 #fff
    background            hnOrange
    font-weight           300


  >.main-header
    width                 100%
    height                auto
    padding               10px 0
    background            hnOrange
    position              fixed
    top                   0
    left                  0
    z-index               10
    -webkit-app-region    drag
    box-sizing            border-box
    text-align            left

    figure.logo
      background          url('./img/hnlogo.svg') no-repeat center center
      background-size     cover
      display             inline-block
      width               40px
      height              40px

    .state-selector
      display             block
      margin-top          4px
      background          transparent
      border              1px solid darken(hnOrange, 40%)
      box-shadow          none
      width               160px
      opacity             .8
      position            absolute
      right               30px
      top                 0px

      span.arrows
        background        none
        width             0px
        height            0px
        border            4px solid transparent
        border-top-color  darken(hnOrange, 40%)
        position          absolute
        right             10px
        top               17px

        &:before
          content         ''
          display         block
          position        absolute
          left            -4px
          top             -14px
          border          4px solid transparent
          border-bottom-color  darken(hnOrange, 40%)

      .title
        text-align        left
        font-weight       400
        color             darken(hnOrange, 90%)

  >.listview-wrapper
    margin                60px auto
    height                calc(100% - 60px)

    .lazy-loader
      text-align          center

  .kdlistview-articles-list
    margin-top            30px
    margin-bottom         30px
    z-index               9
    counter-reset         articleindex

    .kdlistitemview-article
      height              auto
      background          #fff
      padding             18px 18px 18px 108px
      margin              0 0 2px
      box-sizing          border-box
      position            relative

      .article-number
        display           block
        position          absolute
        left              0
        top               0
        width             60px
        height            100%
        background        #f4f4f4
        text-align        center
        border-right      1px solid #eee

        &:before
          counter-increment articleindex
          content           counter(articleindex)
          display           block
          position          absolute
          width             100%
          top               50%
          left              0
          color             #dadada
          font-size         16px
          -webkit-transform translateY(-50%)

      .share-view
        width               auto
        height              auto
        padding             6px 3px
        background          #fff
        position            absolute
        left                40px
        top                 8px
        opacity             0
        z-index             -1
        border              1px solid #ccc
        overflow            visible
        border-radius       4px
        box-shadow          0 1px 3px rgba(0,0,0, .2)

        &:after
          content           ''
          position          absolute
          display           block
          border            7px solid transparent
          border-top-color  #fff
          top               100%
          left              26px
          margin-top        -1px

        &:before
          content           ''
          position          absolute
          display           block
          border            7px solid transparent
          border-top-color  #ccc
          top               100%
          left              26px

        &.active
          opacity           1
          z-index           20

        .icon
          float             left
          font-size         26px
          color             #444
          cursor            pointer

          &:hover

            &.icon-facebook
              color           #3b5998

            &.icon-twitter
              color           #55acee

            &.icon-linkedin
              color           #0976b4

            &.icon-gplus
              color           #dd4b39

      h2
        font-size         14px
        color             #444
        display           block
        border-bottom     1px solid lighten(hnOrange, 95%)
        padding           0 0 6px
        cursor            pointer

        span
          padding         0
          margin          0

      .article-info
        font-size         12px
        color             #d3d3d3
        font-weight       200
        margin            6px 0 0

        >span ~ span
         &:before
           content        ''
           display        inline-block
           width          5px
           height         5px
           background     #ededed
           border-radius  50%
           vertical-align middle
           margin         0 6px 0 4px

        em
          font-weight     400

      .article-actions
        position          absolute
        left              61px
        top               0px
        height            100%
        width             30px
        background        #fafafa

        .kdbutton
          width           30px
          height          50%
          top             0
          position        absolute
          background      transparent
          border          none
          border-radius   0
          box-shadow      none
          text-shadow     none
          color           #95a5a6
          font-size       16px
          padding         0
          box-sizing      border-box

          &:nth-child(2)
            border-top    1px solid #f0f0f0
            top           50%

          &.icon-heart
            color         #e74c3c

      &.read
        opacity           .7

        h2
          opacity         .5

.kdmodal.share-popup

  left                    50% !important
  top                     50% !important
  pointer-events          none
  box-sizing              border-box
  margin                  -200px 0 0 -350px
  width                   700px !important
  height                  400px !important
  padding                 20px 20px 0

  .kdmodal-title
    padding               8px
    border-radius         0
    border-bottom         2px solid hnOrange
    cursor                default
    position              relative

    span.title
      font-family         'Helvetica Neue'
      font-size           12px

  .kdmodal-inner
    pointer-events        all
    border-radius         0

  .content-display-frame
    height                auto
    width                 100%

    &.loading-active
      height              100%
      overflow            hidden

      iframe
        opacity           0

    iframe
      width               100%
      height              100%

  .close-icon
    display             block
    background          none
    width               auto
    height              auto
    font-size           22px
    color               #95a5a6
    right               26px

    &:before
      font-family       'icons'
      content           '\e802'
      font-style        normal
      font-weight       normal
      speak             none
      display           inline-block
      text-decoration   inherit
      width             1em
      margin-right      .2em
      text-align        center
      font-variant      normal
      text-transform    none
      line-height       1em
      margin-left       .2em

.kdmodal.content-display
  left                    0 !important
  top                     0 !important
  padding                 20px 20px 0
  pointer-events          none
  box-sizing              border-box
  width                   100% !important
  height                  100% !important

  .kdmodal-inner
    pointer-events        all
    border-radius         0

  .kdmodal-content
    max-height            calc(100% - 40px) !important
    min-height            calc(100% - 40px) !important

  .kdmodal-title
    padding               8px
    border-radius         0
    border-bottom         2px solid hnOrange
    cursor                default
    position              relative

    span.title
      font-family         'Helvetica Neue'
      font-size           12px

    .icon-readability
      background          transparent
      border              none
      margin              0
      padding             0
      position            absolute
      right               38px
      top                 12px
      font-size           19px
      text-shadow         none
      box-shadow          none
      color               #95a5a6

      &.active
        color             #333

    .icon-heart
    .icon-heart-empty
      background          transparent
      border              none
      margin              0
      padding             0
      position            absolute
      right               70px
      top                 11px
      font-size           19px
      text-shadow         none
      box-shadow          none
      color               #95a5a6

    .icon-heart
      color               #e74c3c

  .close-icon
    display             block
    background          none
    width               auto
    height              auto
    font-size           22px
    color               #95a5a6
    right               26px

    &:before
      font-family       'icons'
      content           '\e802'
      font-style        normal
      font-weight       normal
      speak             none
      display           inline-block
      text-decoration   inherit
      width             1em
      margin-right      .2em
      text-align        center
      font-variant      normal
      text-transform    none
      line-height       1em
      margin-left       .2em

  .content-display-frame
    height                auto

    &.loading-active
      height              100%
      overflow            hidden

      iframe
        opacity           0

    iframe
      width               100%
      height              100%


    .readability-view
      width               100%
      height              auto
      box-sizing          border-box
      padding             40px
      font-family         'Georgia'
      font-size           16px
      line-height         1.5em
      letter-spacing      0.02em
      color               #000
