
hnOrange = #ff6600

body
  background            #eee
  font-family           "Helvetica Neue"
  font-size             16px
  letter-spacing        .04em
  -webkit-user-select   none
  overflow              hidden

main.main-view
  .inner-container
    margin                0 auto
    max-width             960px
    padding               0 30px
    box-sizing            border-box
    position              relative

  >.main-header
    width                 100%
    height                auto
    padding               10px 0
    background            hnOrange
    position              fixed
    top                   0
    left                  0
    z-index               10
    -webkit-app-region    drag
    box-sizing            border-box
    text-align            center

    figure.logo
      background          url('./img/hnlogo.svg') no-repeat center center
      background-size     cover
      display             inline-block
      width               40px
      height              40px

    .state-selector
      display             block
      margin-top          4px
      background          #fff
      border              none
      box-shadow          none
      width               160px
      opacity             .8
      position            absolute
      right               30px
      top                 0px

      .title
        text-align        left
        color             #999

  >.listview-wrapper
    margin                60px auto
    height                calc(100% - 60px)

    .lazy-loader
      text-align          center

  .kdlistview-articles-list
    margin-top            30px
    margin-bottom         30px
    z-index               9
    counter-reset         articleindex

    .kdlistitemview-article
      height              auto
      background          #fff
      padding             18px 18px 18px 108px
      margin              0 0 2px
      box-sizing          border-box
      position            relative

      .article-number
        display           block
        position          absolute
        left              0
        top               0
        width             60px
        height            100%
        background        #f4f4f4
        text-align        center
        border-right      1px solid #eee

        &:before
          counter-increment articleindex
          content           counter(articleindex)
          display           block
          position          absolute
          width             100%
          top               50%
          left              0
          color             #dadada
          font-size         16px
          -webkit-transform translateY(-50%)

      h2
        font-size         14px
        color             #444
        display           block
        border-bottom     1px solid lighten(hnOrange, 95%)
        padding           0 0 6px
        cursor            pointer

        span
          padding         0
          margin          0

      .article-info
        font-size         12px
        color             #d3d3d3
        font-weight       200
        margin            6px 0 0

        >span ~ span
         &:before
           content        ''
           display        inline-block
           width          5px
           height         5px
           background     #ededed
           border-radius  50%
           vertical-align middle
           margin         0 6px 0 4px

        em
          font-weight     400

      .article-actions
        position          absolute
        left              61px
        top               0px
        height            100%

        .kdbutton
          width           30px
          height          50%
          top             0
          position        absolute
          background      #fafafa
          border          none
          border-radius   0
          box-shadow      none
          text-shadow     none
          color           #d9d9d9
          font-size       16px
          padding         0
          box-sizing      border-box

          &:nth-child(2)
            border-top    1px solid #f0f0f0
            top           50%

          &.icon-star
            color         hnOrange

      &.read
        opacity           .7

        h2
          opacity         .5

.kdmodal.content-display
  left                    0 !important
  top                     0 !important
  padding                 20px 20px 0
  pointer-events          none
  box-sizing              border-box
  width                   100% !important
  height                  100% !important
  -webkit-transform       translateY(0%)
  -webkit-transition      -webkit-transform .3s ease

  &.initial
    -webkit-transform     translateY(100%)

  .kdmodal-inner
    pointer-events        all
    border-radius         0

  .kdmodal-content
    max-height            calc(100% - 40px) !important

  .kdmodal-title
    padding               8px
    border-radius         0
    border-bottom         2px solid hnOrange
    cursor                default

    span.title
      font-family         'Helvetica Neue'
      font-size           12px

  .content-display-frame
    height                auto

    iframe
      width               100%
      height              100%






